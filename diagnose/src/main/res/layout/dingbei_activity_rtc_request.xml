<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_tran90">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        app:riv_corner_radius="6dp"
        />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="发起了一个视频会诊"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <View
        android:id="@+id/bottom_center"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tx_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="62dp"
        android:layout_toLeftOf="@id/bottom_center"
        android:drawablePadding="14dp"
        android:drawableTop="@drawable/ic_reject"
        android:gravity="center_horizontal"
        android:text="拒绝"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:focusable="true"
        android:foreground="@drawable/sel_tv_focusable"/>

    <TextView
        android:id="@+id/tx_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@id/bottom_center"
        android:drawablePadding="14dp"
        android:drawableTop="@drawable/ic_accept"
        android:gravity="center_horizontal"
        android:text="接受"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:focusable="true"
        android:foreground="@drawable/sel_tv_focusable"/>

</RelativeLayout>